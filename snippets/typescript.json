{
  "expressEndpoint": {
    "prefix": "route",
    "body": [
      "app.${1|get,post,put,delete|}('${2:/ruta}', (req: express.Request, res: express.Response) => {",
      "  ${3:// tu código aquí}",
      "  res.${4|send,json|}(${5});",
      "});"
    ],
    "description": "Crea un endpoint en Express con TypeScript"
  },

  "expressApp": {
    "prefix": "expressApp",
    "body": [
      "import express from 'express';",
      "",
      "const app: express.Application = express();",
      "const PORT: number = parseInt(process.env.PORT || '3000');",
      "",
      "app.use(express.json());",
      "",
      "// Endpoint GET básico",
      "app.get('/', (req: express.Request, res: express.Response) => {",
      "  res.send('¡Hola desde Express con TypeScript!');",
      "});",
      "",
      "app.listen(PORT, () => {",
      "  console.log(`Servidor corriendo en el puerto ${PORT}`);",
      "});"
    ],
    "description": "Configura una aplicación básica de Express con TypeScript"
  },

  "fetchGet": {
    "prefix": "fetchGet",
    "body": [
      "fetch('${1:url}')",
      "  .then((response: Response) => response.${2|json,text|}())",
      "  .then((data: ${3:any}) => {",
      "    console.log(data);",
      "  })",
      "  .catch((error: unknown) => {",
      "    console.error('Error:', error);",
      "  });"
    ],
    "description": "Hace un fetch GET en TypeScript"
  },

  "fetchPost": {
    "prefix": "fetchPost",
    "body": [
      "fetch('${1:url}', {",
      "  method: 'POST',",
      "  headers: {",
      "    'Content-Type': 'application/json'",
      "  },",
      "  body: JSON.stringify(${2:data})",
      "})",
      "  .then((response: Response) => response.${3|json,text|}())",
      "  .then((data: ${4:any}) => {",
      "    console.log(data);",
      "  })",
      "  .catch((error: unknown) => {",
      "    console.error('Error:', error);",
      "  });"
    ],
    "description": "Hace un fetch POST con JSON en TypeScript"
  }
}

