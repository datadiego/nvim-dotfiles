{
  "insertInto": {
    "prefix": "insert",
    "body": [
      "INSERT INTO ${1:tabla} (${2:columnas})",
      "VALUES (${3:valores});"
    ],
    "description": "Inserta valores en una tabla"
  },
  "updateTable": {
    "prefix": "update",
    "body": [
      "UPDATE ${1:tabla}",
      "SET ${2:columna = valor}, ${3:columna2 = valor2}",
      "WHERE ${4:condición};"
    ],
    "description": "Actualiza valores de una tabla con condición"
  },

  "createPostgreSQL": {
  "prefix": "createPostgreSQL",
  "body": [
    "CREATE TABLE ${1:tabla} (",
    "  ${2:id} INT GENERATED ALWAYS AS IDENTITY PRIMARY KEY,",
    "  ${3:columna1} ${4|INT,BIGINT,SERIAL,BIGSERIAL,VARCHAR,TEXT,BOOLEAN,DATE,TIMESTAMP|},",
    "  created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP",
    ");"
  ],
  "description": "Crea una tabla nueva en PostgreSQL con selección de tipos comunes"
},

"createSQLite": {
  "prefix": "createSQLite",
  "body": [
    "CREATE TABLE ${1:tabla} (",
    "  ${2:id} INTEGER PRIMARY KEY AUTOINCREMENT,",
    "  ${3:columna1} ${4|INTEGER,REAL,TEXT,BLOB,NUMERIC,BOOLEAN,DATE,DATETIME|},",
    "  created_at DATETIME DEFAULT CURRENT_TIMESTAMP",
    ");"
  ],
  "description": "Crea una tabla nueva en SQLite con selección de tipos comunes"
},

"createMySQL": {
  "prefix": "createMySQL",
  "body": [
    "CREATE TABLE ${1:tabla} (",
    "  ${2:id} INT AUTO_INCREMENT PRIMARY KEY,",
    "  ${3:columna1} ${4|INT,BIGINT,TINYINT,DECIMAL,FLOAT,DOUBLE,VARCHAR,CHAR,TEXT,DATE,DATETIME,TIMESTAMP,BOOLEAN|},",
    "  created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP",
    ");"
  ],
  "description": "Crea una tabla nueva en MySQL con selección de tipos comunes"
}

  "createView": {
    "prefix": "createView",
    "body": [
      "CREATE VIEW ${1:vista} AS",
      "SELECT ${2:columnas}",
      "FROM ${3:tabla}",
      "WHERE ${4:condición};"
    ],
    "description": "Crea una vista basada en una consulta"
  },
  "join": {
    "prefix": "join",
    "body": [
      "SELECT ${1:columnas}",
      "FROM ${2:tabla1}",
      "JOIN ${3:tabla2} ON ${4:tabla1.columna = tabla2.columna};"
    ],
    "description": "Realiza una unión entre dos tablas"
  } 
}

