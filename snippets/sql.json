{
  "selectFrom": {
    "prefix": "selectWhere",
    "body": [
      "SELECT ${1:*} FROM ${2:tabla}",
      "WHERE ${3:condición};"
    ],
    "description": "Selecciona columnas de una tabla con condición opcional"
  },
  "insertInto": {
    "prefix": "insert",
    "body": [
      "INSERT INTO ${1:tabla} (${2:columnas})",
      "VALUES (${3:valores});"
    ],
    "description": "Inserta valores en una tabla"
  },
  "updateTable": {
    "prefix": "update",
    "body": [
      "UPDATE ${1:tabla}",
      "SET ${2:columna = valor}",
      "WHERE ${3:condición};"
    ],
    "description": "Actualiza valores de una tabla con condición"
  },
  "deleteFrom": {
    "prefix": "delete",
    "body": [
      "DELETE FROM ${1:tabla}",
      "WHERE ${2:condición};"
    ],
    "description": "Elimina filas de una tabla con condición"
  },
  "createTable": {
    "prefix": "createLite",
    "body": [
      "CREATE TABLE ${1:tabla} (",
      "  ${2:id} INTEGER PRIMARY KEY AUTOINCREMENT,",
      "  ${3:columna1} ${4:TIPO},",
      "  ${5:columna2} ${6:TIPO}",
      ");"
    ],
    "description": "Crea una tabla nueva"
  }
}

